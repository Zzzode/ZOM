{
  "version": 3,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 25,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "base",
      "hidden": true,
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build-${presetName}",
      "cacheVariables": {
        "CMAKE_C_COMPILER": "clang",
        "CMAKE_CXX_COMPILER": "clang++",
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
      }
    },
    {
      "name": "debug",
      "inherits": "base",
      "displayName": "Debug",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug"
      }
    },
    {
      "name": "release",
      "inherits": "base",
      "displayName": "Release",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      }
    },
    {
      "name": "sanitizer",
      "inherits": "base",
      "displayName": "Sanitizers",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "ZOM_ENABLE_ADDRESS_SANITIZER": "ON",
        "ZOM_ENABLE_UNDEFINED_SANITIZER": "ON"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "debug",
      "configurePreset": "debug",
      "targets": [
        "zc",
        "lexer"
      ]
    },
    {
      "name": "release",
      "configurePreset": "release",
      "targets": [
        "zc",
        "lexer"
      ]
    },
    {
      "name": "sanitizer",
      "configurePreset": "sanitizer",
      "targets": [
        "all",
        "zcTests",
        "zomlangCompilerTests"
      ]
    }
  ],
  "testPresets": [
    {
      "name": "default",
      "configurePreset": "sanitizer",
      "output": {
        "outputOnFailure": true
      },
      "execution": {
        "noTestsAction": "error",
        "stopOnFailure": true,
        "jobs": 8
      }
    },
    {
      "name": "allTests",
      "inherits": "default",
      "description": "Run all tests"
    }
  ]
}
